{{#if game}}
    <table>
       <tr>
            <td>Name:</td>
            <td>{{game.name}}</td>
        </tr>
        <tr>
            <td>Url:</td>
            <td>{{game.url}}</td>
        </tr>
        <tr>
            <td>Description:</td>
            <td>{{game.description}}</td>
        </tr>
        <tr>
            <td>Image:</td>
            <td>{{game.image_url}}</td>
        </tr>
        <tr>
            <td>Mechanics:</td>
            <td>   
                <ul>
                    {{#with game.mechanics}}
                            {{#each this}}
                                    <li>{{this}}</li> 
                            {{/each}}
                    {{/with}}
                </ul>
            </td> 
        </tr>
        <tr>
            <td>Categories:</td>
            <td>   
                <ul>
                    {{#with game.categories}}
                            {{#each this}}
                                    <li>{{this}}</li> 
                            {{/each}}
                    {{/with}}
                </ul>
            </td> 
        </tr>
    </table>
{{/if}}